# Exclude these files from the git archive (export)
# This means they won't be included when users download a release

# Git
.gitattributes export-ignore
.gitignore export-ignore
.github export-ignore

# Development tools
.editorconfig export-ignore
.eslintrc export-ignore
.eslintignore export-ignore
.stylelintrc export-ignore
.stylelintignore export-ignore
phpcs.xml export-ignore
phpcs.xml.dist export-ignore
phpstan.neon export-ignore
phpunit.xml export-ignore
phpunit.xml.dist export-ignore
.phpunit.result.cache export-ignore
psalm.xml export-ignore

# Development directories
/tests export-ignore
/docs export-ignore
/node_modules export-ignore
/.wordpress-org export-ignore

# Build tools
webpack.config.js export-ignore
package.json export-ignore
package-lock.json export-ignore
composer.json export-ignore
composer.lock export-ignore
Gruntfile.js export-ignore
gulpfile.js export-ignore

# Let Git auto-detect text files and normalize line endings
* text=auto

# Define binary files to avoid line ending conversion
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.webp binary
*.woff binary
*.woff2 binary
*.eot binary
*.ttf binary
*.otf binary 